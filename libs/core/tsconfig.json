{
    "compilerOptions": {
      "lib": [
        "ESNext",
        "dom"
      ],
      "removeComments": true,
      "target": "ESNext",
      "baseUrl": "./",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "module": "ESNext",
      "paths": {
        "@/*": ["src/*"]
      },
      "resolveJsonModule": true,
      "alwaysStrict": true,
      "allowUnreachableCode": false,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "jsx": "react-jsx"
    },
    "include": ["./**/*.ts"],
    "exclude": [
      "node_modules/**/*"
    ]
  }